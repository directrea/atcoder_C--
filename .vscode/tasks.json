{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17", 
                "-g",
                "-Wall",
                "-Wextra",
                //"-fsanitize=address,undefined",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}/", 
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}
