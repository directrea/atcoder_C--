{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "g++ build active file",
            "command": "/usr/local/Cellar/llvm/17.0.1/bin/clang++",
            "args": [
                "-std=c++23",
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
    ]
}